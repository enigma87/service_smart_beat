<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.1.xsd">

	<bean class="org.apache.commons.dbcp.BasicDataSource" destroy-method="close" id="dataSource">
		<property name="driverClassName" value="${apr.roo.database.driverClassName}" />
		<property name="url" value="${genie.database.url}" />
		<property name="username" value="${genie.database.username}" />
		<property name="password" value="${genie.database.password}" />
	</bean>

	<bean id="userHeartRateTestDao" class="com.genie.heartrate.mgmt.dao.UserHeartRateTestDao">
		<property name="dataSource" ref="dataSource" />
	</bean>
	
	<bean id="userHeartRateZoneDao" class="com.genie.heartrate.mgmt.dao.UserHeartRateZoneDao">
		<property name="dataSource" ref="dataSource" />
	</bean>

</beans>